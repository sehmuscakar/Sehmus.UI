@model List<Sehmus.DataAccess.Entities.About>
<section id="about" class="about">
    <div class="container">
        @foreach (var item in Model)
        {
            
        
        <div class="section-title">
            <h2>Hakkımda</h2>
            <p>@item.Description</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right">
                <img src="~/Img/@item.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                <h3>@item.Title</h3>
              
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                                
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.Website</span></li>

                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                  
                            <li><i class="bi bi-chevron-right"></i> <strong>E-Posta:</strong> <span>@item.Mail</span></li>
                           
                        </ul>
                    </div>
                </div>
                <p>
                 @item.Description2
                </p>
            </div>
        </div>
        }
    </div>
</section><!-- End About Section -->
