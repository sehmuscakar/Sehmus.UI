@model Sehmus.UI.Areas.Admin.Models.ResetPasswordViewModel 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <h2>Şifre Yenileme Sayfası</h2>
    <form method="post" asp-action="ResetPassword">
        <label>Şifrenizi Giriniz</label>
        <input type="password" class="form-control" asp-for="Password" />
        <br />
        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <br />
        <button class="btn btn-primary">Şifreyi Güncelle</button>
    </form>
</div>
